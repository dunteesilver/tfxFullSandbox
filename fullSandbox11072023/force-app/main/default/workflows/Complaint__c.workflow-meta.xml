    <rules>
        <fullName>Complaint - Customer Letter Requested</fullName>
        <actions>
            <name>Customer_Letter_Requested</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND 2 AND 3 AND 4</booleanFilter>
        <criteriaItems>
            <field>Complaint__c.Customer_response_letter_requested__c</field>
            <operation>equals</operation>
            <value>Yes</value>
        </criteriaItems>
        <criteriaItems>
            <field>Complaint__c.RecordTypeId</field>
            <operation>notEqual</operation>
            <value>Interventional Capital,Anesthesia,Respiratory,Interventional – Legacy VSI &amp; Manta &amp; OnControl Products</value>
        </criteriaItems>
        <criteriaItems>
            <field>Complaint__c.Status__c</field>
            <operation>equals</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Complaint__c.TC__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Email alert for an individual within Customer Advocacy to let them know there is a complaint that was approved in which the customer is asking for a letter to be sent. This email alert goes to Kayla Davis.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
