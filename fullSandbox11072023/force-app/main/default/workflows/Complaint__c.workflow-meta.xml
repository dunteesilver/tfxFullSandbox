    <rules>
        <fullName>Auto submit complaints - approval process</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Complaint__c.Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <description>Time Based Workflow Updates the Status of a complaint to “Submitted” after 24 hours of creation. 

This update to the record, triggers the master_Complaint trigger that calls the autoSubmitRecords class that submits the record for approval.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Update_Status_to_Submitted</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Auto submit complaints for approval</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Complaint__c.Status__c</field>
            <operation>equals</operation>
            <value>Open</value>
        </criteriaItems>
        <description>deactivated- using new workflow to fire at 1 day instead of 2.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Update_Status_to_Submitted</name>
                <type>FieldUpdate</type>
            </actions>
            <offsetFromField>Complaint__c.CreatedDate</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
