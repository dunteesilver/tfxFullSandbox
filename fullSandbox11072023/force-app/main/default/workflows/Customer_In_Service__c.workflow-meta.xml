    <rules>
        <fullName>Customer InService Email Alerts</fullName>
        <active>true</active>
        <description>This rule will trigger the Time dependant actions if  the Customer in-service record Status value is &quot;Assigned&apos;&apos; for 15,30,45 days.</description>
        <formula>ISPICKVAL(Status__c , &apos;Assigned&apos;)</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>X45_Days_Email_Notification</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Customer_In_Service__c.Last_Assigned_Date__c</offsetFromField>
            <timeLength>45</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>X15_Days_Email</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Customer_In_Service__c.Last_Assigned_Date__c</offsetFromField>
            <timeLength>15</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
        <workflowTimeTriggers>
            <actions>
                <name>X30_Days_Email_alert</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Customer_In_Service__c.Last_Assigned_Date__c</offsetFromField>
            <timeLength>30</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Email when completed</fullName>
        <actions>
            <name>Customer_In_Service</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Customer_In_Service__c.Status__c</field>
            <operation>equals</operation>
            <value>Completed</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
