<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VA_CMA_Program_Physical_Address_Required</fullName>
    <active>true</active>
    <description>For CMA Program RT Physical Address of Event is required</description>
    <errorConditionFormula>AND(

RecordType.Name = &quot;CMA Program&quot;,

 ISBLANK(Location_of_Event__c) 

)</errorConditionFormula>
    <errorDisplayField>Location_of_Event__c</errorDisplayField>
    <errorMessage>Physical Address of Event is Required for CMA Program</errorMessage>
</ValidationRule>
