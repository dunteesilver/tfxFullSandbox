<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Reason_for_not_buying_required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL(Utilizing_product_del__c, &quot;No&quot;), 
 ISPICKVAL(Reason_for_not_buying__c,&quot;&quot; )
)</errorConditionFormula>
    <errorDisplayField>Reason_for_not_buying__c</errorDisplayField>
    <errorMessage>If they are not utilizing the product, please enter Reason for not buying</errorMessage>
</ValidationRule>
