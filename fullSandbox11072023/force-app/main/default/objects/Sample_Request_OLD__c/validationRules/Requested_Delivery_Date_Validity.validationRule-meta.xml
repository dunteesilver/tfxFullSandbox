<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Requested_Delivery_Date_Validity</fullName>
    <active>true</active>
    <errorConditionFormula>Requested_Delivery_Date__c &lt; TODAY()+2</errorConditionFormula>
    <errorDisplayField>Requested_Delivery_Date__c</errorDisplayField>
    <errorMessage>Date must be at least 2 days in the future</errorMessage>
</ValidationRule>
