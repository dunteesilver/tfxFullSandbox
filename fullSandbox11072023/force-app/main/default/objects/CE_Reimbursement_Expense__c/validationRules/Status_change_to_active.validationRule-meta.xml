<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_change_to_active</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &quot;Submit CRF&quot;), NOT(CRF_CE_Status__c =&quot;Active&quot; ) )</errorConditionFormula>
    <errorDisplayField>Status__c</errorDisplayField>
    <errorMessage>The CE must be in an &quot;Active&quot; status to submit an Education Record</errorMessage>
</ValidationRule>
