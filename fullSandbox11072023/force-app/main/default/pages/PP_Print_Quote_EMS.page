<apex:page controller="PP_Print_Quote" sidebar="false" applyBodyTag="false" applyHtmlTag="false" renderAs="{!r}" showHeader="false">
    <head>
        <style type="text/css" media="print">
            @page {
            size: 8.5in 11in;/* width height */
            }

            @page
            {
            margin-top: 50px;
            margin-bottom: 250px;
<!--            padding-bottom: 30px;-->
            @top-center { content: element(header); }
            @bottom-left { content: element(footer); }
            }

            div.header { padding: 10px; position: running(header); }
            div.footer { display: block; padding: 5px; position: running(footer); }

            .pagenumber:before { content: counter(page); }
            .pagecount:before { content: counter(pages); }

        </style>
        <style type="text/css">
            body {
            font-family: Arial Unicode MS;
            font-size: 10px;
            padding: 1px;
            }

            table {
            border-spacing: 10px;
            border-collapse: collapse;
            }
            td {
            font-family:"Sans-Serif";
            font-size: 10px;
            padding: 5px;
            }
            #tbs {
            border:1px solid black;

            }
            #tbs th{
            padding:5px;
            border:1px solid black;
            font-family:"Sans-Serif";
            font-size: 11px;
            font-weight: bold;
            background-color:#777;
            color:#FFF;

            }
            #tbs td{
            padding:5px;
            border-left: 1px solid black;
            border-right: 1px solid black;
            }
            #tbs td.bline{
            padding:7px;
            border-style: solid;
            border-left: none;
            border-right: none;
            border-bottom: none;
            border-top: thick single #f0f0f5;
            }
            #tbs td.noline{
            padding:7px;
            border-style: solid;
            border-left: none;
            border-right: none;
            border-bottom: none;
            border-top: none;
            }

            .bgc{
            background-color: #f0f0f5;
            }

            .isbold {
            font-weight: bold;
            }
            .fl {
            font-weight: bold;
            text-align: right;
            }
            .r {
            text-align: right;
            }
            #totals td{
            padding:7px;
            }
            .rline {
            border-right-color: black;
            border-right-style: solid;
            border-width: 1px;
            }
            .bline{
            padding:7px;
            border-style: solid;
            border-left: none;
            border-right: none;
            border-bottom: none;
            border-top: thick single #f0f0f5;

            }
            .text-nowrap {
            white-space:nowrap;
            overflow:hidden;
            }
            .topline {
            border-top-style: solid;
            }
            .bottomline {
            border-bottom-style: solid;
            border-width: 1px;
            }
            .border {
            padding:1px;
            border:1px solid black;

            }
        </style>
    </head>
