<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Country_Manager__c</field>
        <field>CurrencyIsoCode</field>
        <field>Dealer_Account_Number__c</field>
        <field>Dealer_Name__c</field>
        <field>Status__c</field>
        <field>Tender_Number__c</field>
        <field>Comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Notify_Requestor_of_Release</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Released</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Released_by</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>diana.karlsson@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Released PR.</description>
        <label>Release Approval</label>
        <name>Release_Approval</name>
        <rejectionActions>
            <action>
                <name>Approval_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Email_Rejected_Pricing_Request</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Release_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Released_by</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approved_Pricing_Request</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Approval_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Approval_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Release_Date</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Released_by</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>diana.karlsson@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Review period for the SPA Creation.</description>
        <label>Review for SPA</label>
        <name>Review_for_SPA</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>Trying this again.</description>
    <emailTemplate>LatAm_Email_Templates/LatAm_Pricing_Request_Review</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Pricing_Request__c.Approval_Status__c</field>
            <operation>notEqual</operation>
            <value>Submitted,Released,Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_Approved_Email</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Successful_Submission_of_Pricing_Request</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Pricing Request Approval Rev 3</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Email_Recalled_Pricing_Request</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Approval_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Release_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Released_by</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
