<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admins</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account_Facility__c</field>
        <field>Owner</field>
        <field>Sales_Rep__c</field>
        <field>Department_Unit_Focus_Vetting__c</field>
        <field>Policy_Protocol_Procedure_Vetting__c</field>
        <field>Tissue_Source__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>heather.wear@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CMA Approval</label>
        <name>CMA_Approval</name>
    </approvalStep>
    <emailTemplate>Education_Records/Request_for_Approval_CMA_Lab_VF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Education_Record__c.RecordType</field>
            <operation>equals</operation>
            <value>CMA Procedural Lab Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Business_Unit__c</field>
            <operation>equals</operation>
            <value>EMS,Anesthesia</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>EdRecord_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Approval_AEM_Lab</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Final_Approval_Date_Filled</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EdRecord_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EdRecord_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Ed Record AEM Lab</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>CEM__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>EdRecord_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
