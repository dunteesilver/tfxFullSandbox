<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Territory__c</field>
        <field>Shipping_Method__c</field>
        <field>Type__c</field>
        <field>Shipping_Address_1__c</field>
        <field>Shipping_Address_2__c</field>
        <field>Shipping_City__c</field>
        <field>Shipping_Country__c</field>
        <field>Shipping_State__c</field>
        <field>Shipping_Zipcode__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 OR ( 2 AND 3) OR (4 AND 5)</booleanFilter>
            <criteriaItems>
                <field>Sample_Request__c.Priority__c</field>
                <operation>equals</operation>
                <value>Overnight</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sample_Request__c.Owner_Business_Unit__c</field>
                <operation>equals</operation>
                <value>Surgical,Surgical Disposables,Surgical Instruments,Surgical Percuvance</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sample_Request__c.Type__c</field>
                <operation>equals</operation>
                <value>Loaner</value>
            </criteriaItems>
            <criteriaItems>
                <field>Sample_Request__c.Type__c</field>
                <operation>equals</operation>
                <value>Sample</value>
            </criteriaItems>
            <criteriaItems>
                <field>User.Business_Unit__c</field>
                <operation>contains</operation>
                <value>Anesthesia,Canada,Cardiac,Vascular</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>andreina.mendoza@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Customer Service</label>
        <name>Customer_Service</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>Pricing_Portal/Approval_Assignment_Sample_Request_Supa</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Sample_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.Line_Count__c</field>
            <operation>notEqual</operation>
            <value>0</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Sample_Request_Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Sample_Request_Update_Status_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Sample_Request_Update_Status_Submit</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sample Request v2</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Sample_Request_Update_Status_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
