<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>jen.miller@teleflex.com</submitter>
        <type>user</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Supported_Products__c</field>
        <field>Requesting_RCEM__c</field>
        <field>Phone_Number__c</field>
        <field>E_mail_Address__c</field>
        <field>Mailing_Address__c</field>
        <field>Mailing_City__c</field>
        <field>Mailing_Country__c</field>
        <field>Mailing_State__c</field>
        <field>Mailing_Zip__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amy.mills@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Profile__c.Clinical_Specialty__c</field>
                <operation>equals</operation>
                <value>EZ-IO</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CMA - Vetting EZIO</label>
        <name>CMA_Vetting_EZIO</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>amy.bardin@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Profile__c.Clinical_Specialty__c</field>
                <operation>equals</operation>
                <value>Non IO,All Speaker Programs</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CMA -Vetting Non-IO</label>
        <name>CMA_Vetting_Non_IO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>heather.suhor@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CMA - Contract Creation</label>
        <name>CMA_Contract_Creation</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>jen.miller@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Profile__c.Clinical_Specialty__c</field>
                <operation>equals</operation>
                <value>All Speaker Programs</value>
            </criteriaItems>
        </entryCriteria>
        <label>Adjust Profile Type Speaker Programs</label>
        <name>Adjust_Profile_Type_Speaker_Programs</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This process is used for pre-contract approvals only.</description>
    <emailTemplate>Education_Records/Profile_Onboarding_Approval_Assignment</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Profile__c.RecordType</field>
            <operation>equals</operation>
            <value>Pre-Contract</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Profile_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Profiles_Contract_Notification</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Profile_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Profile_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Sent_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Onboarding Checkpoints</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Profile_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
