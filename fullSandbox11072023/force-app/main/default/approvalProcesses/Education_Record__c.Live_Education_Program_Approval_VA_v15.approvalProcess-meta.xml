<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admins</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account_Facility__c</field>
        <field>Owner</field>
        <field>Sales_Rep__c</field>
        <field>CEM__c</field>
        <field>RCEM__c</field>
        <field>Primary_Product__c</field>
        <field>Program__c</field>
        <field>Date_of_Event_Start__c</field>
        <field>Ending_Date__c</field>
        <field>Facility_provided_cadaveric_tissue__c</field>
        <field>Product_Kits_Required__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>RSM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Confirmation of proper account readiness</description>
        <label>RSM Review</label>
        <name>RSM_Review</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>CEM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Education plan development, resource allocation</description>
        <entryCriteria>
            <formula>NOT(BEGINS(CreatedBy.UserRole.Name ,&quot;Vascular CEM&quot;))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CEM Review</label>
        <name>CEM_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>RCEM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Review of plan and resource allocation</description>
        <entryCriteria>
            <criteriaItems>
                <field>Education_Record__c.Business_Unit__c</field>
                <operation>notEqual</operation>
                <value>IA</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>RCEM Review</label>
        <name>RCEM_Review</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CE_Cadaveric_Tissue_Notification_after_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amy.mills@teleflex.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jim.blosser@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>If HCP allocation required</description>
        <entryCriteria>
            <criteriaItems>
                <field>Education_Record__c.Facility_provided_cadaveric_tissue__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CMA Approval - Cadaveric Tissue</label>
        <name>CMA_Approval_Cadaveric_Tissue1</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Product_Samples_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>valerie.mueller@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>2 OR (1 AND (3 OR 4) )</booleanFilter>
            <criteriaItems>
                <field>Education_Record__c.Product_Kits_Required__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.Course_Material_Needed__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.Sales_Rep_to_provide_kits__c</field>
                <operation>notEqual</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.who_is_providing_kits__c</field>
                <operation>notEqual</operation>
                <value>Sales Rep</value>
            </criteriaItems>
        </entryCriteria>
        <label>Product Approval</label>
        <name>Product_Approval</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Product_Samples_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>v15</description>
    <emailTemplate>Education_Records/Request_for_Approval_EdRequest_VF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Education_Record__c.RecordType</field>
            <operation>equals</operation>
            <value>Live Education Program Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Business_Unit__c</field>
            <operation>equals</operation>
            <value>VA,IA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Stage__c</field>
            <operation>notEqual</operation>
            <value>Training Completed</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CE_Additional_Educator_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CE_Clinical_Educator_Update_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Stage_to_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Approval_Live_Education</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_stage_to_cancelled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Rejection_Live_Education</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>EdRecord_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Live Education Program Approval - VA1</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>CEM__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>8</processOrder>
    <recallActions>
        <action>
            <name>EdRecord_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
