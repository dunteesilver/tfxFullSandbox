<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Territory__c</field>
        <field>Shipping_Method__c</field>
        <field>Type__c</field>
        <field>Shipping_Address_1__c</field>
        <field>Shipping_Address_2__c</field>
        <field>Shipping_City__c</field>
        <field>Shipping_Country__c</field>
        <field>Shipping_State__c</field>
        <field>Shipping_Zipcode__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>javier.lopez@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Sample_Request__c.Approval_Required__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Manager Approval</label>
        <name>Manager_Approval</name>
    </approvalStep>
    <description>Approval process for Sales Regions:  Brazil (800618), Central America (800621), Northern Cone (800621), Southern Cone (800620), Caribbean (800619), US Exports (800619), All Other (800622). Chile and Mexico will be housed in different approval processes due to different email addresses.</description>
    <emailTemplate>Pricing_Portal/Approval_Assignment_Sample_Request_Supa</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Sample_Request__c.Status__c</field>
            <operation>equals</operation>
            <value>New,Rejected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.RecordType</field>
            <operation>equals</operation>
            <value>Latam Sample Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.Line_Count__c</field>
            <operation>greaterOrEqual</operation>
            <value>1</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.SAP_Internal_Account__c</field>
            <operation>contains</operation>
            <value>800618,800621,800620,800619,800622</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.Sales_Org_Key__c</field>
            <operation>notEqual</operation>
            <value>US103020,US6020</value>
        </criteriaItems>
        <criteriaItems>
            <field>Sample_Request__c.Sales_Order__c</field>
            <operation>equals</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Sample_Request_LATAM_Approval_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Sample_Request_Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Sample_Request_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Sample_Request_Update_Status_Reject</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Sample_Request_Update_Status_Submit</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Sample Request Latam V1</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Sample_Request_Update_Status_Recall</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
