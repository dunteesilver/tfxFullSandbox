<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>User__c</field>
        <field>Name</field>
        <field>Owner</field>
        <field>Trainings__c</field>
        <field>Agree__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Route to approver</label>
        <name>Route_to_approver</name>
    </approvalStep>
    <description>Process for rep to request a demo unit.</description>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Request_Demo_Unit__c.Trainings__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Request_Demo_Unit__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
        <criteriaItems>
            <field>Request_Demo_Unit__c.Agree__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_rep_email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Assign_VPS_Demo_Unit</name>
            <type>Task</type>
        </action>
        <action>
            <name>Notify_VPS_teleflex_com_to_ship_demo_to_rep_SF_com</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_of_Record_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Delete_record_of_the_rep_that_has_been_rejected</name>
            <type>Task</type>
        </action>
        <action>
            <name>Rejection_email_to_rep</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Uncheck_Agree_checkbox</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_of_Record_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_Status_of_Record_to_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>VPS_Terms_of_Agreement</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>User Request Demo Unit</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
