<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Commercial_Operations</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Teleflex_Global_IT</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account_Name__c</field>
        <field>Commit_Date__c</field>
        <field>Expiration_Date__c</field>
        <field>Status__c</field>
        <field>Internal_Comments_Only__c</field>
        <field>Customer_comments__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>christopher.walker@teleflex.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>judy.hunt@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Route to ASK Approvers</label>
        <name>Route_to_ASK_Approvers</name>
    </approvalStep>
    <description>Approval Matrix Process for Latin America SBU ASK Agreements</description>
    <emailTemplate>Pricing_Portal/Approval_Price_Quote_Supa</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( Line_Count__c  &gt; 0,  NOT(ISPICKVAL(Status__c, &apos;Approved&apos;)),  BusinessUnit__c = &apos;Latin America&apos;,  TEXT(Type__c) = &apos;ASK Agreement&apos;,  Sales_Org_Key__c = &apos;CO1010&apos;)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Completed_Approval_Process</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>PP_Approval_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Commit_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Price_Quote_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_status_to_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Waiting_on_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PQ Approval Latin America ASK Agreement</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>13</processOrder>
    <recallActions>
        <action>
            <name>Update_Status_to_In_Progress</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
