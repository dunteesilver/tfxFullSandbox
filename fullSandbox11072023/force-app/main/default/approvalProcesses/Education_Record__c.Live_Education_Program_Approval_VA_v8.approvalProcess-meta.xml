<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admins</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account_Facility__c</field>
        <field>Owner</field>
        <field>Sales_Rep__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Change_Status_to_Confirmed</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>CEM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CEM Approve</label>
        <name>CEM_Approve</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CE_Travel_Approved_Send_to_CE_ACE</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Hotel_Travel_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>RCEM__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <formula>AND(
NOT(Clinical_Educator__r.RecordType.Name = &quot;TFX - Internal Resource&quot;),
OR(
ISPICKVAL(Hotel_Requested__c, &quot;Yes&quot;),
ISPICKVAL(Travel_Type_Requested__c,&quot;Flight&quot;),
ISPICKVAL(Travel_Type_Requested__c,&quot;Train&quot;),
ISPICKVAL(Car_Request__c,&quot;Car Rental Requested&quot;),
ISPICKVAL(Car_Request__c,&quot;Taxi/Public Transportation&quot;),
Travel_Time_4_hrs__c = TRUE))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Travel Approval</label>
        <name>Travel_Approval</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Hotel_Travel_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CE_Cadaveric_Tissue_Notification_after_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>amy.mills@teleflex.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>jim.blosser@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Education_Record__c.Facility_provided_cadaveric_tissue__c</field>
                <operation>equals</operation>
                <value>True</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>CMA Approval - Cadaveric Tissue</label>
        <name>CMA_Approval_Cadaveric_Tissue1</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Product_Samples_Approved</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>matt.boretti@teleflex.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>valerie.mueller@teleflex.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>2 OR (1 AND (3 OR 4) )</booleanFilter>
            <criteriaItems>
                <field>Education_Record__c.Product_Kits_Required__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.Course_Material_Needed__c</field>
                <operation>equals</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.Sales_Rep_to_provide_kits__c</field>
                <operation>notEqual</operation>
                <value>Yes</value>
            </criteriaItems>
            <criteriaItems>
                <field>Education_Record__c.who_is_providing_kits__c</field>
                <operation>notEqual</operation>
                <value>Sales Rep</value>
            </criteriaItems>
        </entryCriteria>
        <label>Product Approval</label>
        <name>Product_Approval</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Product_Samples_Rejected</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>v8</description>
    <emailTemplate>Education_Records/Request_for_Approval_EdRequest_VF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Education_Record__c.RecordType</field>
            <operation>equals</operation>
            <value>Live Education Program Request</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Business_Unit__c</field>
            <operation>equals</operation>
            <value>VA,IA</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CE_Additional_Educator_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CE_Clinical_Educator_Update_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Approval_Live_Education</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_stage_to_cancelled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Rejection_Live_Education</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_to_CEM_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Live Education Program Approval - VA</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>CEM__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>EdRecord_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
