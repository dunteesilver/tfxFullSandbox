<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Admins</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Vascular_Clinical_Manager</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Account_Facility__c</field>
        <field>Owner</field>
        <field>Sales_Rep__c</field>
        <field>CEM__c</field>
        <field>RCEM__c</field>
        <field>Primary_Product__c</field>
        <field>Program__c</field>
        <field>Date_of_Event_Start__c</field>
        <field>Ending_Date__c</field>
        <field>Facility_provided_cadaveric_tissue__c</field>
        <field>Product_Kits_Required__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>CE_Cadaveric_Tissue_Notification_after_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>VA_CMA</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If HCP allocation required</description>
        <label>CMA Vetting</label>
        <name>CMA_Approval_Cadaveric_Tissue1</name>
    </approvalStep>
    <description>V1</description>
    <emailTemplate>Workflow_Emails/VARequest_for_Approval_EdRequest_VF</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND (4 OR 5)</booleanFilter>
        <criteriaItems>
            <field>Education_Record__c.RecordType</field>
            <operation>equals</operation>
            <value>Clinical Sales Program</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Business_Unit__c</field>
            <operation>equals</operation>
            <value>VA</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.Stage__c</field>
            <operation>equals</operation>
            <value>Confirmed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.RequestClinicalEducationContractor__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Education_Record__c.RequestClinicalEducationContractor2__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>CE_Additional_Educator_2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CE_Clinical_Educator_Update_Email</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Stage_to_Confirmed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CMA_Email_has_been_fired</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>X2019_VA_Final_Approval_Notification_For_Clinical_Sales_CMA_Program_RTs</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_stage_to_cancelled</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Final_Rejection_Live_Education</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>CMA_Vetting</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>EdRecord_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>CMA Vetting when an Edu Rec is Approved</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>CEM__c</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>13</processOrder>
    <recallActions>
        <action>
            <name>EdRecord_Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
